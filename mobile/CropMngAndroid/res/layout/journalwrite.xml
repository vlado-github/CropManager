<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select date:"
            android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
    <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/journalDate"
            android:calendarViewShown="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add comment:"
            android:id="@+id/textView1" android:layout_gravity="left|center_vertical"/>
    <EditText
            android:singleLine="false"
            android:lines="4"
            android:minLines="2"
            android:gravity="top|left"
            android:maxLines="6"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"
            android:id="@+id/descriptionJournal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveJournalBtn"
            android:layout_gravity="center"
            android:onClick="btnHandler"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/canceJournalBtn"
            android:layout_gravity="center"
            android:onClick="btnHandler"/>
</LinearLayout>