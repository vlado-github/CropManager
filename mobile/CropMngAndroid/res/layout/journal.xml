<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a crop:"
            android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cropSpinner" android:layout_gravity="left|center_vertical" android:spinnerMode="dropdown"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write"
            android:id="@+id/writeBtn"
            android:layout_gravity="center"
            android:onClick="btnHandler"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read"
            android:id="@+id/readBtn"
            android:layout_gravity="center"
            android:onClick="btnHandler"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelBtn"
            android:layout_gravity="center"
            android:onClick="btnHandler"/>
</LinearLayout>